+static inline void 
+dp83820_write_annotate(unsigned int b, volatile void __iomem *addr)
+{
+    __asm__ __volatile__ (
+	    "7777:"
+	    "mov %0, %1\n" 
+	    "nop\n"
+	    "nop\n"
+	    "nop\n"
